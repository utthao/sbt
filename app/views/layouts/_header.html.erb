<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "SUN Booking Tour", "#", id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t(".home"), root_path %></li>
      <% if logged_in? %>
        <% if check_is_admin? %>
          <li><%= link_to t(".users"), accounts_path %></li>
        <% end %>
      <li class="dropdown">
        <%= link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do %>
        <%= t(".account") %> <b class="caret"></b>
      <% end %>
        <ul class="dropdown-menu">
          <li><%= link_to t(".profile"), profile_path %></li>
          <li><%= link_to t(".setting"), setting_path %></li>
          <li class="divider"></li>
          <li>
            <%= link_to t(".logout"), logout_path, method: :delete %>
          </li>
        </ul>
      </li>
      <% else %>
        <li><%= link_to t(".login"), login_path %></li>
      <% end %>

      <li><%= link_to t(".signup"), signup_path %></li>
      <li><%= link_to t("english"), locale: Settings.en %></li>
      <li><%= link_to t("vietnamese"), locale: Settings.vi %></li>
    </ul>
  </nav>
  </div>
</header>
