<% provide :title, t("tour_manage") %>
  <h1 class = "text-center" ><%= t("tour_manage") %></h1>
  <div class="col-md-12">
    <%= link_to t("add"), new_tour_path, class: "f30-bold"%>
    <%= search_form_for @search, url: tours_path, local: true, class: "input-group", method: "get" do |f| %>
    <div class = "field">
      <%= f.label :title_cont, t("searchfor") %>
      <%= f.text_field :title_cont %>
    </div>
    <div class="actions"><%= f.submit "Search" %></div>
    <% end %>
    <table class = "table table-responsive-sm table-hover table-outline mb-0">
      <thead class="thead-light">
        <tr>
          <th class = "text-center"></th>
          <th class = "text-center"><%= t"title" %></th>
          <th class = "text-center"><%= t"postedby" %></th>
          <th class = "text-center"><%= sort_link @search, :start_day, t("start_day") %></th>
          <th class = "text-center"><%= sort_link @search, :end_day, t("end_day") %></th>
          <th class = "text-center"><%= t"status" %></th>
          <th class = "text-center"></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "tour_row", collection: @tour_rows %>
      </tbody>
    </table>
    <%= will_paginate @tour_rows %>
  </div>
